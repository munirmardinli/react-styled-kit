{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"baseUrl": ".",
		"lib": ["es2020", "dom", "dom.iterable", "esnext", "es6"],
		"target": "es2020",
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "lib",
		"noEmit": false,
		"forceConsistentCasingInFileNames": true,
		"pretty": true,
		"noImplicitAny": true,
		"removeComments": true,
		"typeRoots": ["node_modules/@types","src/types/global.d.ts"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "lib"]
}
